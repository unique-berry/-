/* pages/movies/movie-detail/movie-detail.wxss */
@import "./info/info-template.wxss";
@import "../moviesCard/moviesCard-template.wxss";
@import "./personComment/personComment-template.wxss";
page{
  overflow: hidden;
}
.movieDetail-content{
  width: 100%;
  overflow: hidden;
}
.bg1{
  position: absolute;
  top:0px;
  left: 0;
  width: 100%;

}
.bg{
  position: absolute;
  top: 0px;
  width: 100%;
  background: rgba(0,0,0,0.3);
}
.playbackRate{
  width: 90rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  right: 40rpx;
  z-index: 1000;
  color: #dbdbdb;
  border-radius: 10rpx;
}
.playbackRate image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  left: 0;
}
.speed_num{
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 30rpx;
}
.speed_list{
  position: absolute;
  width: 85rpx;
  flex-direction: column;
  top: 70rpx;
  right: 20rpx;
  z-index: 1000;
  height: 300rpx;
  font-size: 30rpx;
  color: #dbdbdb;
  text-align: center;
}
.speed_list view{
  width: 85rpx;
  height: 60rpx;
}
.canvas{
  width: 100%;
  position: absolute
}
.video{
  width: 100%;
  height: 423rpx;
}
.blank{
  width: 100%;
  height: 1500rpx;
  position: relative;
}
.img{
  width: 100%;
  height: 423rpx;
}
.load{
  position: absolute;
  left: 0;
  right: 0;
  top:150rpx;
  margin: auto;
  width: 50rpx;
  height: 50rpx;
}
.recommend{
  font-size: 28rpx;
  font-weight: bold;
  color: #faf9fe;
  width: 95%;
  margin: 0 auto;
  margin-top:60rpx;
}
.moviesCard-title{
  color: #faf9fe;
  font-size: 28rpx;
}
.controls{
  position: relative;
  width: 100%;
  height: 423rpx;
}
.play{
  width: 128rpx;
  height: 128rpx;
  position: absolute;
  top:134rpx;
  left:0;
  right: 0;
  margin: auto;
  z-index: 100000;
}
.bottom{
  width: 100%;
  height: 300rpx;
}
.detail-comment{
  background: #ccc;
  width: 100%;
  position: absolute;
  z-index: 1000;
}
.end{
  width: 90px;
  height: 94px;
  margin: 20px auto;
  display: block;
}
.comment-wrap{
  position: relative;
  z-index: 100;
  display: flex;
  flex-direction:row;
  height: 60px;
  border-bottom:1px solid #cdccda;
  color: #faf9fe;
  line-height: 60px;
  justify-content:space-between;
}
.comment-title{
  margin-left: 20px;
  font-size: 24rpx;
}
.comment-black-wrap{
  width: 60px;
  height: 60px;
  text-align: right;
}
.comment-black{
  width: 20px;
  height: 20px;
  margin-top: 20px;
  margin-right: 20px;
}
.comment-load{
  position: absolute;
  left: 0;
  right: 0;
  top: 200rpx;
  margin: auto;
  width: 40rpx;
  height: 40rpx;
}
.comment-tishi{
  position: absolute;
  left: 0;
  right: 0;
  top: 280rpx;
  color: #cdccda;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
}