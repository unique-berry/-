@import "movie-list/movie-list-template.wxss";
@import "banner/banner-template.wxss";
@import "type/type-template.wxss";
page{
  overflow: hidden;
}
.container{
  background: #fff;
  height: 1500rpx;
}
.bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.bg-image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.container_bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background: rgba(0,0,0,0.3);
}
.logo{
    background-image: url(//static.kaiyanapp.com/eyepetizer-web/assets/images/index/sprite-s65574ce6bf.2cb0c081.png);
    background-repeat: no-repeat;
    background-position: 0 81.02435%;
    background-size: 853.86px;
    height: 100px;
    top: 30%;
    width: 266px;
    left: 50%;
    position: absolute;
    transform: translate(-50%,-50%);
}
.intro{
    background-position: 0 69.09976%;
    background-size: 528.59829px;
    height: 44px;
    top: 54%;
    width: 289px;
    background-image: url(//static.kaiyanapp.com/eyepetizer-web/assets/images/index/sprite-s65574ce6bf.2cb0c081.png);
    background-repeat: no-repeat;
    left: 50%;
    position: absolute;
    transform: translate(-50%,-50%);
}
.bg-load{
  position: absolute;
  left: 0;
  right: 0;
  top: 67%;
  width: 37px;
  height: 37px;
  margin: auto;
}
.hint{
  position: absolute;
  left: 0;
  right: 0;
  top: 80%;
  width: 100%;
  margin: auto;
  color: #cdccda;
  text-align: center;
  font-size: 25rpx;
}
.server-hint{
  position: absolute;
  left: 0;
  right: 0;
  top: 80%;
  width: 100%;
  margin: auto;
  color: #cdccda;
  text-align: center;
  font-size: 25rpx;
  transform: translate(0,40rpx);
}
.banner-title{
  font-size:40rpx;
  font-weight: bold;
  color: #444444;
  margin-left: 2.5%;
  margin-top: 20rpx;
}
swiper {
  width: 100%;
  height: 670rpx;
  background: #fff;
  margin-bottom: 0rpx;
}
.main-btn{
  position: absolute;
  left: 0;
  right: 0;
  top: 67%;
  margin: auto;
  width: 240rpx;
  height: 80rpx;
  border: 1px solid #cdccda;
  text-align: center;
  line-height: 80rpx;
  color: #cdccda;
}
.nav-bg{
  top: 0;
  left: 0;
  width: 100%;
  height: 81rpx;
}
.nav{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
  z-index: 10;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 24rpx;
  color: #515151;
  border-bottom: 1rpx solid #faf9fe;

}
.nav-center{
  display: flex;
  flex-direction: row;
  width: 50%;
  height: 80rpx;
  /* background: #aaa; */
  justify-content: space-between;
  text-align: center;
  line-height: 80rpx;
}
.search{
  position: absolute;
  top: 25rpx;
  right:60rpx;
  width: 35rpx;
  height: 35rpx;
}
.search_btn{
  position: absolute;
  top:2rpx;
  right:41rpx;
  width: 80rpx;
  height: 80rpx;
  opacity: 0.5;
}
.search_box{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  background:#fff;
  z-index: 100;
}
.search-wrap{
  display: flex;
  flex-direction: column;
}
.search-input-wrap{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 30rpx;
  padding: 2.5%;
}
.search-vaule{
  width: 80%;
  height: 10rpx;
  background: #f0f0f0;
  border-radius: 5px;
  padding: 5rpx;
  padding-left: 30rpx;
  color: #515151;
  font-size: 24rpx;
}
.search-close{
  font-size: 34rpx;
  line-height: 60rpx;
  color: #5a5a5a;
}
.search-history{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 2.5%;
  padding-bottom: 0;
  
}
.hot-search-wrap{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 2.5%;
  padding-top: 0;
}
.history-cancel{
  font-size: 34rpx;
  color: #5a5a5a;
  vertical-align: middle;
}
.history-wrap{
  display: flex;
  flex-direction: column;
  color: #5d82d0;
  padding: 2.5%;
  padding-top:0; 
}
.history-wrap view{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #faf9fe;
}
.search_list{
  padding: 2.5%;
  font-weight: bold;
}
.end{
  background-size: contain;
  background-repeat: no-repeat;
  width: 360px;
  height: 98px;
  margin: auto;
  display: block;
}
.search-load{
  position: absolute;
  left: 0;
  right: 0;
  top:0rpx;
  bottom: 0;
  margin: auto;
  width: 50rpx;
  height: 50rpx;
}
.noSearchMessage{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  height: 200rpx;
}
.noSearchMessage-title{
  color: #000;
  font-size: 24rpx;
  text-align: center;

}
.noSearchMessage-text{
  color: #5a5a5a;
  font-size: 24rpx;
  text-align: center;
}
.type-box{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap:wrap; 
}
