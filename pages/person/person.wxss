/* pages/person/person.wxss */
@import "../movies/moviesCard/moviesCard-template.wxss";
.moviesCard-title{
  color: #faf9fe;
}
page{
  overflow: hidden;
}
.person_wrapper{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: url("http://img.kaiyanapp.com/dc9a8f73fdd7dcd4799ba9da5b1105d7.jpeg?imageMogr2/quality/60/format/jpg");
  align-items:center;
  
}
.person_bg{
  position: absolute;
  height: 1100px;
  top: 0px;
  z-index: 1;
  width: 100%;
  background:rgba(0,0,0,0.3);
}
.wx{
  position: relative;
  z-index: 2;
  margin-top: 40px;
  width: 75px;
  height: 75px;
  border-radius: 50%;
  background: #ccc;

}
.person_hint{
  position: relative;
  z-index: 2;
  width: 100%;
  height: 25px;
  padding:2px;
  margin-top: 10px;
  text-align: center;
  color: #faf9fe;
}
.btn{
  z-index: 2;
  width: 75px;
  height: 75px;
  padding:2px;
  position: absolute;
  top: 40px;
  left: 0;
  right: 0;
  margin: auto;
  opacity: 0;
}
.person_item{
  position: relative;
  z-index: 2;
  margin-top: 25px;
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #faf9fe;
  /* justify-content: space-between */

}
.like_warp,.record_warp{
  width: 50%;
  text-align: center;
  font-size: 30rpx;
  color: #faf9fe;
  height: 25px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  line-height: 25px;
  opacity: 0.6; 
  /* border:1px solid #ccc; */
}
.like_warp{
  border-right:1rpx solid #cdccda;
}
.record_warp{
  
}
.record_png,.like_png{
  width: 25px;
  height: 25px;
  margin-right: 2px;
  margin-top: 0rpx;
  display: inline-block;
}
/* .like_png{
  margin-top: 6rpx;
} */
.like_title,.record_title{
  margin-left: 5px;
}
.scroll_box{
  position: relative;
  z-index: 2;
}
.end{
  width: 90px;
  height: 94px;
  margin: 20px auto;
  display: block;
}
.bottom_space{
  width: 100%;
  height: 280rpx;
}
.top_space{
  width: 100%;
  height: 50rpx;
}
.collect_tishi{
  margin-top: 200rpx;
  text-align: center;
  color: #faf9fe;
  top:300rpx;
}